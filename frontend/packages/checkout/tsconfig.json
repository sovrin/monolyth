{
    "compilerOptions": {
        "incremental": true,
        "composite": true,
        "target": "es2016",
        "module": "preserve",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": [
            "ES2016",
            "ES6",
            "DOM",
            "DOM.iterable",
            "dom",
            "ES2021.String",
            "ES2022"
        ],
        "outDir": "dist"
    },
    "include": ["**/*.ts", "**/*.tsx"]
}
