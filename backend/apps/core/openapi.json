{
    "openapi": "3.0.0",
    "info": {
        "title": "ThomannCore API",
        "description": "API for the Core module",
        "version": "1.0.0"
    },
    "paths": {
        "/api/login/status": {
            "get": {
                "tags": [
                    "Login"
                ],
                "summary": "Returns login status and (if logged in) basic user info",
                "operationId": "get_api_login_status",
                "responses": {
                    "200": {
                        "description": "Login status",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginStatusView"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Login"
                ],
                "summary": "Attempt login",
                "operationId": "post_api_login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest2"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login status",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginStatusView"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "LoginRequest": {
                "required": [
                    "username",
                    "password"
                ],
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "UserView": {
                "required": [
                    "username"
                ],
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "roles": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "default": []
                    }
                },
                "type": "object"
            },
            "LoginStatusView": {
                "properties": {
                    "loggedIn": {
                        "type": "boolean",
                        "default": false
                    },
                    "user": {
                        "nullable": true,
                        "oneOf": [
                            {
                                "$ref": "#/components/schemas/UserView"
                            }
                        ]
                    }
                },
                "type": "object"
            },
            "LoginRequest2": {
                "required": [
                    "username",
                    "password"
                ],
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Login"
        }
    ]
}
