{
  "name": "nc/core",
  "type": "project",
  "require": {
    "php": "^8.4",
    "zircote/swagger-php": "^5.5"
  },
  "scripts": {
    "app": "php -S 0.0.0.0:8000 -t public",
    "spec": "php bin/console nelmio:apidoc:dump --format=json > apps/core/openapi.json"
  },
  "autoload": {
    "psr-4": {
      "Thomann\\Core\\": "src/"
    }
  },
  "repositories": [
    {
      "type": "path",
      "url": "../../packages/*",
      "options": {
        "symlink": true
      }
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true
}
