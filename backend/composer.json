{
  "name": "nc/backend",
  "type": "project",
  "scripts": {
    "workspaces:install": [
      "Composer\\Config::disableProcessTimeout",
      "@php tools/workspaces.php install"
    ],
    "workspaces:update": [
      "Composer\\Config::disableProcessTimeout",
      "@php tools/workspaces.php update"
    ],
    "phpstan": "phpstan analyse -c phpstan.neon --memory-limit=1G"
  },
  "autoload": {
    "psr-4": {
      "Sovrin\\Backend\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Oleg Kamlowski",
      "email": "oleg@kamlowski.com"
    }
  ],
  "repositories": [
    {
      "type": "path",
      "url": "packages/*",
      "options": {
        "symlink": true
      }
    }
  ],
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "symplify/monorepo-builder": "^12"
  },
  "config": {
    "preferred-install": {
      "*": "source"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
