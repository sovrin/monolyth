{
  "name": "nc/backend",
  "type": "project",
  "scripts": {
    "workspaces:install": [
      "Composer\\Config::disableProcessTimeout",
      "@php tools/workspaces.php install"
    ],
    "workspaces:update": [
      "Composer\\Config::disableProcessTimeout",
      "@php tools/workspaces.php update"
    ],
    "phpstan": "phpstan analyse -c phpstan.neon --memory-limit=1G"
  },
  "autoload": {
    "psr-4": {
      "Thomann\\Core\\": "apps/core/src/"
    }
  },
  "repositories": [
    {
      "type": "path",
      "url": "packages/*",
      "options": {
        "symlink": true
      }
    }
  ],
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^12.4",
    "symfony/test-pack": "^1.2"
  },
  "config": {
    "preferred-install": {
      "*": "source"
    },
    "allow-plugins": {
      "symfony/runtime": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "nelmio/api-doc-bundle": "^5.6",
    "symfony/validator": "^7.3",
    "symfony/serializer": "^7.3",
    "symfony/framework-bundle": "^7.3",
    "symfony/console": "^7.3",
    "symfony/runtime": "^7.3",
    "symfony/yaml": "^7.3",
    "symfony/property-access": "^7.3",
    "symfony/property-info": "^7.3",
    "symfony/twig-bundle": "^7.3"
  }
}
